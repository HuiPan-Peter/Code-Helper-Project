{{!-- This view is to sign up for an account. --}}
{{!-- Signing up for an admin account is not allowed for security reasons. --}}

<section class="h-screen flex items-center justify-center bg-gray-200">
    <div class="bg-white p-8 rounded-lg shadow-md w-96">
        <h1 class="text-2xl font-semibold mb-4">Sign up</h1>
        
        <div class="mb-4 relative">
            <input type="text" placeholder="e.g. TechSmith210" class="username-input pl-10 pr-4 py-2 w-full border rounded-md" required />
            <span class="absolute left-2 top-2.5 text-gray-500">
                <i class="fas fa-user"></i>
            </span>
        </div>

        <div class="mb-4 relative">
            <input type="email" placeholder="e.g. techsmith210@gmail.com" class="email-input pl-10 pr-4 py-2 w-full border rounded-md" required />
            <span class="absolute left-2 top-2.5 text-gray-500">
                <i class="fas fa-envelope"></i>
            </span>
        </div>

        <div class="mb-6 relative">
            <input type="password" placeholder="******* (minimum 6 characters)" class="password-input pl-10 pr-4 py-2 w-full border rounded-md" required />
            <span class="absolute left-2 top-2.5 text-gray-500">
                <i class="fas fa-lock"></i>
            </span>
        </div>

        <button class="signup-button bg-green-500 hover:bg-green-600 text-white font-semibold py-2 w-full rounded-md mb-4 transition">Sign up</button>

        <p class="text-center">
            Already have an account? 
            <a href="/login/" class="text-blue-500 hover:underline">Log in</a>
        </p>
    </div>
</section>
<script src="/js/signup.js"></script>
