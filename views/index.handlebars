<!--Paths to stylesheets used-->

<link rel="stylesheet" href="https://unpkg.com/@splidejs/splide@3.0.7/dist/css/splide.min.css" />
<link rel="stylesheet" href="https://unpkg.com/keen-slider/keen-slider.min.css" />
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
 <script src="js/homepage.js"></script>
<!--structure for homepage-->

<section class="keen-slider mb-16">
  <!-- Add the mb-16 class to add margin-bottom -->
  <div class="keen-slider__slide number-slide1 flex items-center justify-center" style="background-color: white;">
    <div class="flex flex-col justify-center items-center h-full text-center p-10 bg-white">
      <img src="../images/logo.png" alt="Logo" style="width: 400px; height: 100px;" class="mb-6" />
      <h2 class="text-4xl font-bold mb-6 text-black">Welcome to Our Community</h2>
      <p class="text-xl mb-8 text-black">Join us and stay updated with the latest news.</p>
      <a href="/sign-up"
        class="text-lg font-bold py-3 px-6 bg-blue-500 text-white rounded hover-bg-blue-700 transition duration-300 ease-in-out mb-6">Sign
        Up</a>
    </div>
  </div>
</section>

<!-- Include Handlebars library -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.7.7/handlebars.min.js"></script>

<!-- Latest Member Posts Section using Keen Slider with Handlebars and Tailwind CSS -->
<h3 class="text-2xl font-semibold mb-4">Latest Member Posts</h3>
<section class="keen-slider mb-12">
  <div id="postCarousel" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner" id="postsContainer">
      <div id="slider" class="keen-slider">
        <!-- Handlebars will render the post cards here -->
      </div>
    </div>
    <a class="carousel-control-prev" href="#postCarousel" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#postCarousel" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</section>

<!-- Handlebars post card template -->
<script id="post-card-template" type="text/x-handlebars-template">
  <div class="keen-slider__slide p-4 flex flex-col items-center">
    <div class="bg-white rounded-lg shadow-lg p-6 w-full">
      <h3 class="text-lg font-semibold mb-2">{{ title }}</h3>
      <p class="text-gray-600 mb-2">{{ content }}</p>
      <p class="text-gray-500">Posted by Author {{ author_id }}</p>
    </div>
  </div>
</script>


{{!-- Contact Section --}}
<section class="bg-blue-100 py-8">
  <div class="container mx-auto px-4">
    <div class="text-center mb-6">
      <h2 class="text-xl font-semibold text-gray-800 mb-2">Get in Touch</h2>
      <p class="text-gray-600 text-sm">Questions or contributions? We'd love to hear from you.</p>
    </div>
    <div class="text-center">
      <a href="/contact"
        class="inline-block bg-green-500 text-white font-semibold py-2 px-4 rounded hover:bg-green-600 transition-colors duration-300 mt-4 text-sm">
        Contact Us
      </a>
    </div>
  </div>
</section>

<script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.7.7/handlebars.min.js"></script>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script src="js/homepage.js"></script>
<script src="/js/slider.js"></script>


 


