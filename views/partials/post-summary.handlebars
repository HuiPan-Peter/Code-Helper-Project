<section class="bg-white py-10">
  <div class="container mx-auto px-4">
    <div class="flex flex-wrap -mx-4">
      {{#each posts as |post index|}}
        {{#if (lt index 3)}} <!-- Display only the first three posts -->
          <div class="w-full sm:w-1/2 md:w-1/3 lg:w-1/4 px-4 mb-4">
            <div class="bg-white p-4 rounded-lg shadow-md">
              <h2 class="text-gray-500 text-sm">Posted by Author {{post.author_id}}</h2>
              <h1 class="text-black text-lg mt-2 mb-2">{{post.title}}</h1>
              <p class="text-gray-800">{{post.content}}</p>
            </div>
          </div>
        {{/if}}
      {{/each}}
    </div>
  </div>
</section>

